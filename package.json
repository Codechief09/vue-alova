{
  "name": "alova",
  "version": "0.0.1",
  "description": "New request library for MVVM such as Vue.js and React.js",
  "main": "dist/alova.umd.min.js",
  "jsnext:main": "dist/alova.esm.js",
  "module": "dist/alova.esm.js",
  "types": "typings/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf ./dist",
    "test": "jest",
    "release": "npm test && npm run build && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags",
    "lint": "eslint -c .eslintrc.js 'src/**/*.ts'",
    "lint:fix": "eslint -c .eslintrc.js 'src/**/*.ts' --fix",
    "build:self": "rollup -c config/rollup.config.js",
    "build:esm": "rollup -c config/rollup.config.esm.js",
    "build:umd": "cross-env NODE_ENV=development rollup -c config/rollup.config.umd.js",
    "build:umd.min": "cross-env NODE_ENV=production rollup -c config/rollup.config.umd.js",
    "build": "npm run clean && npm run build:self && npm run build:esm && npm run build:umd && npm run build:umd.min",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "jest": "jest --init"
  },
  "author": "JOU-amjs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/JOU-amjs/alova.git"
  },
  "bugs": {
    "url": "https://github.com/JOU-amjs/alova/issues"
  },
  "files": [
    "/dist",
    "typings/*.d.ts"
  ],
  "engines": {
    "node": ">= 0.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@testing-library/react": "^13.2.0",
    "@types/jest": "^27.5.1",
    "@types/node-fetch": "^2.6.1",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "babel-jest": "^28.1.0",
    "cross-env": "5.2.0",
    "eslint": "^5.15.1",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "msw": "^0.41.0",
    "node-fetch": "^2",
    "react": "^18.1.0",
    "rimraf": "2.6.2",
    "rollup": "^2.74.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.2",
    "vue": "^3.2.33",
    "web-streams-polyfill": "^3.2.1"
  }
}
